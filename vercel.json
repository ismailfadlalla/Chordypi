{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/analyze-song",
      "destination": "https://chordypi-production.up.railway.app/api/analyze-song"
    },
    {
      "source": "/api/analyze-audio-upload",
      "destination": "https://chordypi-production.up.railway.app/api/analyze-audio-upload"
    },
    {
      "source": "/api/search-songs",
      "destination": "https://chordypi-production.up.railway.app/api/search-songs"
    },
    {
      "source": "/api/featured-songs",
      "destination": "https://chordypi-production.up.railway.app/api/featured-songs"
    },
    {
      "source": "/api/songs/:path*",
      "destination": "https://chordypi-production.up.railway.app/api/songs/:path*"
    },
    {
      "source": "/api/library/:path*",
      "destination": "https://chordypi-production.up.railway.app/api/library/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).(js|css|html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
