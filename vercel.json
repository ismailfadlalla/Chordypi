{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/analyze-song",
      "destination": "https://chordypi.onrender.com/api/analyze-song"
    },
    {
      "source": "/api/analyze-audio-upload",
      "destination": "https://chordypi.onrender.com/api/analyze-audio-upload"
    },
    {
      "source": "/api/search-songs",
      "destination": "https://chordypi.onrender.com/api/search-songs"
    },
    {
      "source": "/api/featured-songs",
      "destination": "https://chordypi.onrender.com/api/featured-songs"
    },
    {
      "source": "/api/songs/:path*",
      "destination": "https://chordypi.onrender.com/api/songs/:path*"
    },
    {
      "source": "/api/library/:path*",
      "destination": "https://chordypi.onrender.com/api/library/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://sdk.minepi.com https://*.pi.network; connect-src 'self' https://sdk.minepi.com https://*.pi.network https://chordypi.onrender.com https://api.openai.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; frame-src 'self' https://sdk.minepi.com https://*.pi.network; frame-ancestors 'self' https://*.pi.network https://sdk.minepi.com;"
        }
      ]
    }
  ]
}
