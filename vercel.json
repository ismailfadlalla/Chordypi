{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/analyze-song",
      "destination": "https://chordypi-production.up.railway.app/api/analyze-song"
    },
    {
      "source": "/api/analyze-audio-upload",
      "destination": "https://chordypi-production.up.railway.app/api/analyze-audio-upload"
    },
    {
      "source": "/api/search-songs",
      "destination": "https://chordypi-production.up.railway.app/api/search-songs"
    },
    {
      "source": "/api/featured-songs",
      "destination": "https://chordypi-production.up.railway.app/api/featured-songs"
    },
    {
      "source": "/api/songs/:path*",
      "destination": "https://chordypi-production.up.railway.app/api/songs/:path*"
    },
    {
      "source": "/api/library/:path*",
      "destination": "https://chordypi-production.up.railway.app/api/library/:path*"
    },
    {
      "source": "/((?!legal).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).(js|css|html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "unsafe-none"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "cross-origin"
        }
      ]
    }
  ]
}
