# ChordyPi Frontend Environment Variables
# Copy this file to .env.local for local development
# NEVER commit .env files with real API keys!

# API URL - UPDATE WITH YOUR RAILWAY URL AFTER DEPLOYMENT
VITE_API_URL=https://chordypi-backend.up.railway.app
REACT_APP_API_URL=https://chordypi-backend.up.railway.app

# Pi Network Configuration
# Get your App ID from: https://developers.minepi.com after app submission
VITE_PI_APP_ID=chordypi
VITE_PI_ENVIRONMENT=sandbox
# After Pi Network approval, change to: production

# Legacy Pi Network variables (for backward compatibility)
REACT_APP_PI_APP_ID=chordypi
REACT_APP_PI_ENVIRONMENT=sandbox

# App Configuration
VITE_APP_NAME=ChordyPi
VITE_APP_VERSION=3.0.0
