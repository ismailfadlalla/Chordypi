{
  "name": "chordypi-server",
  "version": "1.0.0",
  "description": "ChordyPi - AI Guitar Learning App with Pi Network Blockchain Payments",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "dev-client": "cd client && npm start",
    "dev-server": "nodemon server.js",
    "dev-all": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "start-all": "node start-dual-servers.js",
    "dual-server": "node start-dual-servers.js",
    "generate-ssl": "node scripts/generate-ssl.js",
    "setup": "npm run install-all && npm run generate-ssl",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "guitar",
    "chords",
    "music",
    "learning",
    "pi-network",
    "cryptocurrency",
    "blockchain",
    "ai",
    "machine-learning",
    "react",
    "python",
    "hackathon"
  ],
  "author": "ChordyPi Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "selfsigned": "^3.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "node-forge": "^1.3.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chordypi.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/chordypi/issues"
  },
  "homepage": "https://chordypi.com"
}
