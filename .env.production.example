# ChordyPi Production Environment Configuration Example
# This file shows the structure - DO NOT put real keys here!
# Use Vercel's Environment Variables dashboard for production secrets

# Frontend (React) - Deployed to Vercel
REACT_APP_API_URL=https://chordypi-api.onrender.com
REACT_APP_NODE_API_URL=https://chordypi.vercel.app
REACT_APP_PI_NETWORK_API_KEY=GET_FROM_PI_DEVELOPERS_PORTAL

# Backend Python (Flask) - Deploy to Render
FLASK_ENV=production
FLASK_APP=app.py
PORT=5000
CORS_ORIGINS=https://chordypi.vercel.app,https://localhost:3000

# Node.js Server (Pi Network)
NODE_ENV=production
HTTPS_PORT=3443
HTTP_PORT=8080
PI_NETWORK_API_KEY=GET_FROM_PI_DEVELOPERS_PORTAL

# Database
DATABASE_URL=sqlite:///chordypi.db

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=GENERATE_STRONG_RANDOM_SECRET
JWT_SECRET_KEY=GENERATE_STRONG_RANDOM_JWT_SECRET
